{% for section in groupe.cours.sections %}

<!-- single course -->
<h4 style="background-color: #002347; color: rgb(255, 255, 255)">
  <strong>{{ section.title }}</strong>
</h4>
<br />
{% for vedio in section.uploads %}{% if vedio.filevedio is not null and
vedio.filevedio|trim is not empty %}
<div class="row">
  <div class="col-lg-12">
    <div class="owl-carousel active_course">
      <div class="single_course">
        <div class="course_head">
          <!-- signle file -->

          <iframe
            width="1000"
            height="600"
            src="{{ vedio.filevedio }}"
          ></iframe>
        </div>
        <div class="course_content">
          <h4 class="mb-3">
            <!-- upload title -->
            {{ vedio.title }}
          </h4>
          <p>
            <!-- upload Description -->
            {{ vedio.description }}
          </p>
          <div
            class="course_meta d-flex justify-content-lg-between align-items-lg-center flex-lg-row flex-column mt-4"
          >
            <div class="authr_meta">
              <span class="d-inline-block ml-2"></span>
            </div>
            <div class="mt-lg-0 mt-3">
              <span class="meta_info mr-4">
                <a href="#"> <i class="ti-user mr-2"></i>25 </a>
              </span>
              <span class="meta_info"
                ><a href="#"> <i class="ti-heart mr-2"></i>35 </a></span
              >
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<br />
<br />
{% endif %} {% endfor %} {% endfor %}
